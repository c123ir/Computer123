# =====================================================
# 🔥 Firebase Configuration
# =====================================================
# این متغیرها باید با مقادیر واقعی Firebase project شما پر شوند
# برای دریافت این مقادیر به Firebase Console مراجعه کنید:
# https://console.firebase.google.com

REACT_APP_FIREBASE_API_KEY=AIzaSyC_your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789012
REACT_APP_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012345
REACT_APP_FIREBASE_MEASUREMENT_ID=G-ABCDEFGHIJ

# =====================================================
# 🛠️ Development Configuration
# =====================================================
# Development mode settings
NODE_ENV=development

# Firebase Emulator (برای توسعه محلی)
REACT_APP_USE_FIREBASE_EMULATOR=false
REACT_APP_ENABLE_STORAGE=false

# Firebase Region
REACT_APP_FIREBASE_REGION=us-central1

# =====================================================
# 📊 API Configuration
# =====================================================
# Backend API URL (در صورت استفاده از API سرور جداگانه)
REACT_APP_API_URL=http://localhost:3001/api

# Collections Names (اختیاری)
REACT_APP_FORMS_COLLECTION=forms
REACT_APP_RESPONSES_COLLECTION=form_responses
REACT_APP_TEMPLATES_COLLECTION=form_templates

# =====================================================
# 🔐 Security Configuration
# =====================================================
# Enable/Disable features based on authentication
REACT_APP_REQUIRE_AUTH=false
REACT_APP_ENABLE_GUEST_MODE=true

# =====================================================
# 🎨 UI Configuration
# =====================================================
# Application settings
REACT_APP_NAME=HR Admin Panel
REACT_APP_VERSION=1.0.0
REACT_APP_THEME=default

# Debug mode
REACT_APP_DEBUG=false
